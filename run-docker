#!/bin/bash

set -e

FILE=`realpath $1`

if ! [[ $2 == "clang-"?"."? || $2 == "gcc-"?"."? ]] ; then
    >&2 echo "Unknown compiler"
    exit 1
fi

if [ $3 == 1 ]; then
    OPTIM="-O1"
elif [ $3 == 2 ]; then
    OPTIM="-O2"
elif [ $3 == 3 ]; then
    OPTIM="-O3"
fi

if [ $4 == 11 ]; then
    VERSION="-std=c++11"
elif [ $4 == 14 ]; then
    VERSION="-std=c++14"
elif [ $4 == 17 ]; then
    VERSION="-std=c++1z"
else
    VERSION="-std=c++98 -Werror=c++11-extensions"
fi

LOCK=$FILE.lock
lockfile $LOCK
INFILE=$FILE.cpp
OUTFILE=$FILE.out
CIDFILE=$FILE.cid
PERFFILE=$FILE.perf
FUNCFILE=$FILE.func
if [ $6 = true ] && [ -f $OUTFILE ]; then
    rm $OUTFILE
    rm -f $PERFFILE
fi
if [ -f $OUTFILE ] && ([ $5 = false ] || [ -f $PERFFILE ]); then
    >&2 echo "Showing cached results"
else
    touch $OUTFILE
    chmod 666 $OUTFILE

    MEMORY_LIMITS='--memory=500m --cpu-period=100000 --cpu-quota=25000'

    if [ $5 = true ]; then
        touch $PERFFILE
        chmod 666 $PERFFILE
        ANNOTATE="--security-opt seccomp=seccomp.json -v $PERFFILE:/home/builder/bench.perf -v $FUNCFILE:/home/builder/bench.func"
        ANNOTATE_CMD=" && ./annotate"
        ANNOTATE_RECORD="perf record -g"
    fi
    docker run --rm $ANNOTATE -v $INFILE:/home/builder/bench-file.cpp $MEMORY_LIMITS --cidfile=$CIDFILE -v $OUTFILE:/home/builder/bench.out -t fredtingaud/quick-bench:$2 /bin/bash -c "./build $OPTIM $VERSION && $ANNOTATE_RECORD ./run $ANNOTATE_CMD"
    rm $CIDFILE
fi

rm -f $LOCK
